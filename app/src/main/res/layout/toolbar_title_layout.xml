<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:toolbar="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_2F3348"
        android:minHeight="?attr/actionBarSize"
        toolbar:navigationIcon="@drawable/baselib_img_back_selector">
        <TextView
            android:id="@+id/toolbar_title_layout_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="10dp"
            android:textColor="@drawable/baselib_toolbar_tv_right_selector"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/toolbar_title_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/baselib_font_color_title"
            android:textSize="19sp"/>

        <ImageView
            android:id="@+id/toolbar_title_layout_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/toolbar_title_layout_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:textColor="@drawable/baselib_toolbar_tv_right_selector"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.Toolbar>
<!--    <include layout="@layout/toolbar_divider"/>-->
</LinearLayout>